# vim
function _install_not_exist_vim() {
    if ! type vim > /dev/null 2>&1; then
        brew install vim
    else
        # vim 9.x以上でない場合
        VIM_MAJOR_VERSION=$(vim --version | grep IMproved | sed 's/^.*IMproved \(.*\) (.*/\1/' | sed 's/\..*//g')
        if [ ! $VIM_MAJOR_VERSION -ge 9 ]; then
            brew reinstall vim
        fi
    fi
}

