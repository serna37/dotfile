# others
function _install_not_exist_others() {
    # developer tools
    # gh
    if ! type gh > /dev/null 2>&1; then
        brew install gh
    fi
    # ripgrep
    if ! type rg > /dev/null 2>&1; then
        brew install ripgrep
    fi
    # jq
    if ! type jq > /dev/null 2>&1; then
        brew install jq
    fi
    # silicon
    if ! type silicon > /dev/null 2>&1; then
        brew install silicon
    fi
    # code-minimap
    if ! type code-minimap > /dev/null 2>&1; then
        brew install code-minimap
    fi

    # make me happy
    # genact
    if ! type genact > /dev/null 2>&1; then
        brew install genact
    fi
    # tty-clock
    if ! type tty-clock > /dev/null 2>&1; then
        brew install tty-clock
    fi
    # cmatrix
    if ! type cmatrix > /dev/null 2>&1; then
        brew install cmatrix
    fi
}

